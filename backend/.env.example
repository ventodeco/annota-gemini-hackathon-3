# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Application Configuration
APP_BASE_URL=http://localhost:8080
# Frontend callback target for OAuth redirects.
# In split dev mode (backend :8080 + vite :5173), set this to :5173.
# Leave unset in production to default to APP_BASE_URL.
FRONTEND_BASE_URL=http://localhost:5173
PORT=8080

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=gemini_db

# File Storage Configuration
UPLOAD_DIR=data/uploads
MAX_UPLOAD_SIZE=10485760

# Session Configuration
SESSION_COOKIE_NAME=sid
SESSION_SECURE=false

KNOWLEDGE_CSV_PATH=data/knowledge/knowledge-service.md
