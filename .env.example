# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Application Configuration
APP_BASE_URL=http://localhost:8080
PORT=8080

# # Database Configuration
# # For SQLite (default):
# DB_PATH=data/app.db

# For PostgreSQL (when using Docker Compose):
# DB_CONNECTION_STRING=postgres://gemini_user:gemini_password@localhost:5432/gemini_db?sslmode=disable
# Or use individual components:
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=gemini_user
POSTGRES_PASSWORD=gemini_password
POSTGRES_DB=gemini_db

# File Storage Configuration
UPLOAD_DIR=data/uploads
MAX_UPLOAD_SIZE=10485760

# Session Configuration
SESSION_COOKIE_NAME=sid
SESSION_SECURE=false
